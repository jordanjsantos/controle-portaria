<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xsi:schemaLocation="http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
	http://www.springframework.org/schema/beans	
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:component-scan base-package="br.com.controle.portaria.controller" />
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>	
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
	     <property name="defaultLocale" value="pt_BR" />
	 </bean>
	
	<mvc:annotation-driven />
	<mvc:resources mapping="/include/**" location="/WEB-INF/include/" />
	<mvc:resources mapping="/images/**" location="/WEB-INF/images/" />	
	
<!-- 	<mvc:interceptors> -->
<!-- 	    <bean class="br.com.sisfin.controller.AutorizadorInterceptor" /> -->
<!-- 	</mvc:interceptors> -->
	
	<bean id="jsonConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"></bean>
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
	        <property name="messageConverters">
	          <list>
	            <ref bean="jsonConverter"/>
	          </list>
	    </property>
	</bean>
		
</beans>